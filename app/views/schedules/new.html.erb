<div class="wrapper">
  <div class="container">
  <h1>schedule_new</h1>
    <%= form_with model:@schedule , url: schedules_path do |f| %>

<%# 以下テンプレート予定＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊      %>
      <%= f.text_field :name, placeholder: "プラン名", class:"form-group"%>
      <%= f.text_field :password, placeholder: "編集時に必要になります", class:"form-group"%>
    <h1>概要</h1>
    <%= f.fields_for :summaries do |summary_form| %>
      <%= summary_form.text_field :title, placeholder: "例）持ち物・参加者名", class:"form-group"%>
      <%= summary_form.text_area :content, placeholder: "内容", class:"form-group"%>
    <% end %>
      <%= f.submit "概要を追加", class:"form-group btn"%>

    <h1>プラン</h1>
    <%= f.fields_for :hoge do |hoge| %>
      <%= f.date_field :hoge, placeholder: "", class:"form-group"%>
      <%= f.time_field :hoge, placeholder: "", class:"form-group"%>
      <%= f.text_field :hoge, placeholder: "タイトル", class:"form-group"%>
      <%= f.text_area :hoge, placeholder: "説明", class:"form-group"%>
    <% end %>
    <%= f.submit "プラン追加", class:"form-group btn"%>
    <%= f.submit "日付を追加", class:"form-group btn"%>
<%# 以上テンプレート予定＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊＊      %>

    <%= f.submit "しおりを作成", class:"form-group schedule_btn"%>
    <% end %>
  </div>
</div>