<div class="wrapper">
  <div class="container">
    <h1>schedule_new</h1>
    <%= form_with model:@schedule , url: schedules_path do |f| %>
      <%# プラン名とパスワードの入力フォーム %>
      <%= f.text_field :name, placeholder: "プラン名", class:"form-group"%>
      <%= f.text_field :password, placeholder: "編集時に必要になります", class:"form-group"%>

      <h1>概要</h1>
      <div id="summaries-container">
        <%= f.fields_for :summaries, @schedule.summaries.build, child_index: 'new_summary' do |summary_form| %>
          <div class="summary-form">
            <%= summary_form.text_field :title, placeholder: "例）持ち物・参加者名", class:"form-group"%>
            <%= summary_form.text_area :content, placeholder: "内容", class:"form-group"%>
          </div>
        <% end %>
      </div>
      <%= button_tag "概要を追加", id: "add-summary-btn", class:"form-group btn", type: "button" %>

      <h1>プラン</h1>
      <div id="plans-container">
        <%= f.fields_for :hoge do |plan_form| %>
          <div class="plan-form">
            <%= plan_form.date_field :date, placeholder: "", class:"form-group"%>
            <%= plan_form.time_field :time, placeholder: "", class:"form-group"%>
            <%= plan_form.text_field :title, placeholder: "タイトル", class:"form-group"%>
            <%= plan_form.text_area :description, placeholder: "説明", class:"form-group"%>
          </div>
        <% end %>
      </div>
      <%= button_tag "プランを追加", id: "add-plan-btn", class:"form-group btn", type: "button" %>
      
      <%= button_tag "日付を追加", id: "add-date-btn", class:"form-group btn", type: "button" %>

      <%= f.submit "しおりを作成", class:"form-group schedule_btn"%>
    <% end %>
  </div>
</div>
